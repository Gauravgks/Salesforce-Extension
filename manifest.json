{
  "name": "Salesforce Extension",
  "version": "1.0.0",
  "description": "Salesforce Extension",
  "manifest_version": 3,
  "author": "Gaurav",
  "icons": 
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Salesforce Extension",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "permissions": ["tabs"],
  "host_permissions": [
    "https://*.app.github.dev/*",
    "http://localhost:8080/*",
    "https://salesforce-extension.onrender.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "script.js"],
      "matches": ["https://*/*", "http://*/*", "chrome-extension://*/*"]
    }
  ]
}
